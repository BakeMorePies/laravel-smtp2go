{
    "name": "motomedialab/smtp2go",
    "type": "library",
    "description": "Send emails via API using the first-class email courier SMTP2Go",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.8",
        "laravel/framework": "^9.0.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.39"
    },
    "autoload": {
        "psr-4": {
            "Motomedialab\\Smtp2Go\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Motomedialab\\Smtp2Go\\": "src",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Motomedialab\\Smtp2Go\\Providers\\Smtp2GoServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ]
    }
}
